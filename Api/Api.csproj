<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AssemblyName>OpenPath.Standard.Api</AssemblyName>
    <RootNamespace>OpenPath.Standard.Api</RootNamespace>
    <Authors>Jason Martin</Authors>
    <Company>OpenPath, Inc.</Company>
    <Product>The Perfect API Template</Product>
    <Copyright>2021</Copyright>
    <PackageProjectUrl>https://github.com/OpenPathInc/openpath.standard</PackageProjectUrl>
    <RepositoryUrl>https://github.com/OpenPathInc/openpath.standard</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <PackageTags>API, REST, RESTful, Graph QL, Template</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <Version>1.3.0</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>C:\src\openpath.standard\OpenPath.Standard.Api.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="5.0.9" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.2.1" />
    <PackageReference Include="Swashbuckle.AspNetCore.Newtonsoft" Version="6.2.1" />
    <PackageReference Include="Vse.Web.Serialization.ControlledSerializationJsonConverter" Version="1.0.4" />
    <PackageReference Include="Vsxmd" Version="1.4.5">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\..\src\openpath.standard\Base\Data\Data.csproj" />
    <ProjectReference Include="..\..\..\..\..\src\openpath.standard\Base\Repository\Repository.csproj" />
    <ProjectReference Include="..\..\..\..\..\src\openpath.standard\Base\Service\Service.csproj" />
  </ItemGroup>

</Project>
